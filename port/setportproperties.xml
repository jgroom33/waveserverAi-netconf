<edit-config>
    <target>
      <running/>
    </target>
    <config>
      <waveserver-ports xmlns="urn:ciena:params:xml:ns:yang:ciena-ws:ciena-waveserver-port"
                        xmlns:ncx="http://netconfcentral.org/ns/yuma-ncx">
        <ports>
          <port-id>2-1</port-id>
          <properties>
            <loopback>disabled</loopback>
            <forward-error-correction>enabled</forward-error-correction>
            <otn>
              <odu-termination>terminated</odu-termination>
              <pre-fec-otu-sf-threshold>0.0</pre-fec-otu-sf-threshold>
              <pre-fec-otu-sd-threshold>0.50</pre-fec-otu-sd-threshold>
              <otu-sd-threshold>1E-9</otu-sd-threshold>
              <odu-sd-threshold>1E-9</odu-sd-threshold>
              <conditioning-type>otn</conditioning-type>
              <trace>
                <section>
                  <mismatch-mode>operator-only</mismatch-mode>
                  <mismatch-fail-mode>none</mismatch-fail-mode>
                  <tx-sapi/>
                  <tx-dapi/>
                  <tx-oper/>
                  <tx-oper-mode>automatic</tx-oper-mode>
                  <exp-sapi/>
                  <exp-dapi/>
                  <exp-oper/>
                </section>
                <path>
                  <mismatch-mode>operator-only</mismatch-mode>
                  <mismatch-fail-mode>none</mismatch-fail-mode>
                  <tx-sapi/>
                  <tx-dapi/>
                  <tx-oper/>
                  <tx-oper-mode>automatic</tx-oper-mode>
                  <exp-sapi/>
                  <exp-dapi/>
                  <exp-oper/>
                </path>
              </trace>
            </otn>
          </properties>
        </ports>
        <ports>
          <port-id>2-3</port-id>
          <properties>
            <loopback>disabled</loopback>
            <forward-error-correction>disabled</forward-error-correction>
            <ethernet>
              <mapping-mode>GMP</mapping-mode>
              <conditioning-type>ethernet</conditioning-type>
              <conditioning-holdoff>10</conditioning-holdoff>
            </ethernet>
          </properties>
        </ports>
        <ports>
          <port-id>2-4</port-id>
          <properties>
            <loopback>disabled</loopback>
            <forward-error-correction>disabled</forward-error-correction>
            <ethernet>
              <mapping-mode>GMP</mapping-mode>
              <conditioning-type>ethernet</conditioning-type>
              <conditioning-holdoff>10</conditioning-holdoff>
            </ethernet>
          </properties>
        </ports>
      </waveserver-ports>
    </config>
</edit-config>


